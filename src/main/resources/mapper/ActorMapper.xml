<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.marong.springdemoproject.Mapper.ActorMapper">
    <!-- application.yml中type-aliases-package:未配置则需要用全名-->
    <select id="getActor" resultType="Actor">
        SELECT * FROM actor where actor_id=#{0}
    </select>

    <select id="getActorList" resultMap="ResActorList">
        SELECT * FROM actor
    </select>

    <resultMap id="ResActorList" type="Actor">
        <result column="actor_id" jdbcType="Integer" property="userId" />
        <result column="first_name" jdbcType="VARCHAR" property="firstName" />
        <result column="last_name" jdbcType="VARCHAR" property="lastName" />
        <result column="active" jdbcType="Boolean" property="active" />
        <result column="updateDate" jdbcType="Date" property="last_update" />
        <collection property="actorList" ofType="Actor">
        </collection>
    </resultMap>

</mapper>
